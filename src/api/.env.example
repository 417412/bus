# Environment Configuration for Patient API
ENVIRONMENT=development

# API Configuration
DEBUG=true
API_HOST=0.0.0.0
API_PORT=8000
LOG_LEVEL=INFO

# PostgreSQL Configuration (will use settings.py if available)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=medical_system
POSTGRES_USER=medapp_user
POSTGRES_PASSWORD=your_postgres_password
POSTGRES_CONNECT_TIMEOUT=30
POSTGRES_COMMAND_TIMEOUT=60

# YottaDB API Configuration
YOTTADB_API_BASE=http://192.168.156.43
YOTTADB_TOKEN_URL=http://192.168.156.43/oauth/token
YOTTADB_CLIENT_ID=your_yottadb_client_id
YOTTADB_CLIENT_SECRET=your_yottadb_client_secret
YOTTADB_USERNAME=your_yottadb_api_user
YOTTADB_PASSWORD=your_yottadb_api_password
YOTTADB_SCOPE=patient_update patient_create

# Firebird API Configuration
FIREBIRD_API_BASE=http://firebird-server
FIREBIRD_TOKEN_URL=http://firebird-server/oauth/token
FIREBIRD_CLIENT_ID=your_firebird_client_id
FIREBIRD_CLIENT_SECRET=your_firebird_client_secret
FIREBIRD_USERNAME=your_firebird_api_user
FIREBIRD_PASSWORD=your_firebird_api_password
FIREBIRD_SCOPE=patient_update patient_create

# Mobile App Configuration
MOBILE_APP_REGISTRATION_ENABLED=true
MOBILE_APP_AUTO_REGISTER=true
MOBILE_APP_REQUIRE_BOTH_HIS=false

# HTTP Configuration
HTTP_TIMEOUT=30

# OAuth Configuration
OAUTH_TOKEN_CACHE_BUFFER=300

# Patient Matching Configuration
AUTO_LOCK_MATCHED_PATIENTS=false
MATCHING_TIMEOUT=30

# Rate Limiting Configuration
RATE_LIMITING_ENABLED=false
RATE_LIMIT_RPM=60
RATE_LIMIT_BURST=10

# Security Configuration
API_KEY=
API_KEY_HEADER=X-API-Key
CORS_ENABLED=true
CORS_ORIGINS=*
MAX_REQUEST_SIZE=1048576

# Health Check Configuration
HEALTH_CHECK_HIS=false
HEALTH_CHECK_TIMEOUT=5
HEALTH_CHECK_CACHE=30

# Monitoring Configuration
METRICS_ENABLED=false
PROMETHEUS_PORT=8001

# Logging Configuration
API_LOG_DIR=logs